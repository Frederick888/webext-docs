[
  {
    "namespace": "manifest",
    "types": [
      {
        "$extend": "WebExtensionManifest",
        "properties": {
          "browser_action": {
            "properties": {
              "default_label": {
                "added": "84.0b3",
                "backported": "78.6.1"
              }
            }
          }
        }
      }
    ]
  },
  {
    "namespace": "browserAction",
    "types": [
      {
        "id": "OnClickData",
        "added": "74.0b2",
        "properties": {
          "modifiers": {
            "items": {
              "enumChanges": {
                "Command": {
                  "description": "Only available on macOS."
                },
                "Ctrl": {
                  "description": "Not available on macOS."
                },
                "MacCtrl": {
                  "description": "Only available on macOS, but of limited use in a click event: Holding down the CTRL key while clicking with the mouse is referred to as a 'CTRL click' under macOS and is interpreted as a right mouse click. In a default profile  the ``dom.event.treat_ctrl_click_as_right_click.disabled`` preference is not enabled and the ``MacCtrl`` modifier key is not forwarded to the API."
                }
              }
            }
          }
        }
      }
    ],
    "events": [
      {
        "name": "onClicked",
        "parameters": [
          {
            "name": "tab",
            "added": "74.0b2"
          },
          {
            "name": "info",
            "added": "74.0b2"
          }
        ]
      }
    ],
    "functions": [
      {
        "name": "setLabel",
        "added": "84.0b3",
        "backported": "78.6.1"
      },
      {
        "name": "getLabel",
        "added": "84.0b3",
        "backported": "78.6.1"
      },
      {
        "name": "setIcon",
        "parameters": [
          {
            "name": "details",
            "properties": {
              "path": {
                "description": "Either a relative image path defining a single icon used for all sizes or an IconPath dictionary defining dedicated icons for different sizes."
              }
            }
          }
        ]
      }
    ]
  }
]